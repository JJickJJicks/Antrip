<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileCorrectActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/acc_correct.pwText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_password"
            android:importantForAutofill="no"

            android:inputType="textPassword"
            android:paddingTop="30dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/acc_correct.pwCheckText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_password_check"
            android:importantForAutofill="no"

            android:inputType="textPassword"
            android:paddingTop="30dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/acc_correct.nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_name"
            android:importantForAutofill="no"

            android:inputType="textPersonName"
            android:paddingTop="30dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/acc_correct.emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:enabled="false"
            android:hint="@string/prompt_email"

            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingTop="30dp"
            tools:targetApi="o" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 이미지 선택"

            android:paddingTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample2" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample3" />
        </LinearLayout>

        <Button
            android:id="@+id/acc_correct.confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="16dp"
            android:paddingTop="30dp"
            android:text="@string/action_edit_profile"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="15sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>