<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rootLinearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_round_rectangle"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_circleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_intro_fragment_title"
            style="@style/Title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_intro_fragment_body"
            style="@style/Body"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="test test test"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/component_padding"
            android:layout_gravity="center"
            android:text="시작하기"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/frame_round_rectangle"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>