<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Theme.Dialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/login_bk_color"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/acc_search.toolbar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/themeColor"
            android:gravity="center"
            android:text="@string/action_search_account_short"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/acc_search.emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_email"
            android:importantForAutofill="no"

            android:inputType="textEmailAddress"
            tools:targetApi="o" />

    </LinearLayout>
    <!-- Notice -->

    <View
        android:id="@+id/acc_search.view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_bk_color" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/acc_search.confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00000000"
            android:enabled="true"
            android:gravity="center"
            android:onClick="PassResetViaEmail"
            android:padding="16dp"
            android:text="@string/action_search_account_short"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>