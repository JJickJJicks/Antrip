<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Theme.Dialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">


    <!-- 타이틀바 -->
    <!-- //end 타이틀바 -->

    <!-- Notice -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signup.toolbar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/action_sign_up_short"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/signup.emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_email"
            android:importantForAutofill="no"

            android:inputType="textEmailAddress"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/signup.pwText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_password"
            android:importantForAutofill="no"

            android:inputType="textPassword"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/signup.pwCheckText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_password_check"
            android:importantForAutofill="no"

            android:inputType="textPassword"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/signup.nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="@string/prompt_name"
            android:importantForAutofill="no"

            android:inputType="textPersonName"
            tools:targetApi="o" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 선택" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_rectangle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_size_4"
                    tools:src="@drawable/img_sample1" />

                <ImageView
                    android:id="@+id/iv_image2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_size_4"
                    tools:src="@drawable/img_sample2" />

                <ImageView
                    android:id="@+id/iv_image3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_size_4"
                    tools:src="@drawable/img_sample3" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="프로필1"
                    android:textColor="@color/colorBlack"/>


                <RadioButton
                    android:id="@+id/rb_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="프로필2"
                    android:textColor="@color/colorBlack"/>


                <RadioButton
                    android:id="@+id/rb_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="프로필3"
                    android:textColor="@color/colorBlack"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->
    <View
        android:id="@+id/signup.view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd" />
    <!--// 닫기 버튼 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signup.confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="signUp"
            android:padding="16dp"
            android:text="@string/action_sign_up_short"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>